<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>
    <style name="FullPageButton" parent="@android:style/Widget.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/deep_margin</item>
        <item name="android:layout_marginRight">@dimen/deep_margin</item>
        <item name="android:height">@dimen/default_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_height</item>
    </style>
    <style name="HalfPageButton" parent="FullPageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>
    <style name="FullInputBox" parent="android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/deep_margin</item>
        <item name="android:layout_marginRight">@dimen/deep_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="DisplayText" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>